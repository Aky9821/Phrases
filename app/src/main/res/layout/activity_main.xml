<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="320dp"
        android:layout_height="620dp"
        app:columnCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rowCount="4">

        <Button
            android:id="@+id/button1"
            android:layout_margin="10dp"
            android:gravity="fill"
            android:onClick="clickFxn"
            android:tag="hello"
            android:text="Hello"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button2"
            android:gravity="fill"
            android:layout_margin="10dp"
            android:onClick="clickFxn"
            android:text="Do you\nspeak\nEnglish?"
            android:tag="doyouspeakenglish"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button3"
            android:layout_margin="10dp"
            android:onClick="clickFxn"
            android:gravity="fill"
            android:text="Good\nEvening"
            android:tag="goodevening"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="2"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button4"
            android:gravity="fill"
            android:layout_margin="10dp"
            android:text="Please"
            android:tag="please"
            android:onClick="clickFxn"

            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="3"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button5"
            android:onClick="clickFxn"

            android:layout_margin="10dp"
            android:gravity="fill"
            android:text="You're\nwelcome"
            android:tag="welcome"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button6"
            android:gravity="fill"
            android:onClick="clickFxn"

            android:layout_margin="10dp"
            android:text="I live in"
            android:tag="ilivein"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button7"
            android:layout_margin="10dp"
            android:onClick="clickFxn"

            android:gravity="fill"
            android:text="How\nare you?"
            android:tag="howareyou"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="2"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button8"
            android:gravity="fill"
            android:text="My\nname is"
            android:tag="mynameis"
            android:layout_margin="10dp"
            android:onClick="clickFxn"

            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="3"
            app:layout_rowWeight="1" />
    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>